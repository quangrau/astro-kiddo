---
export interface Props {
  title: string,
  align?: 'left' | 'center' | 'right',
  leading?: boolean,
  size?: 'base' | 'lg' | 'xl',
};

const { align = 'left', size = 'lg', leading = true, title } = Astro.props as Props;
---

<header>
  <nav class="nav-wrapper">
    {leading && (
    <a class="link-wrapper" href="/">
      <div class="icon-wrapper">
        <span />
        <span />
        <span />
      </div>
    </a>
    )}
    <h1 class={`title text-gradient ${size}`} style={`text-align: ${align};`}>
      {title}
    </h1>
  </nav>
</header>

<style>
  header {
    margin: auto;
    padding: 1em 0;
    max-width: 1024px;
  }

  .title.base {
    font-size: var(--font-size-base);
  }

  .title.lg {
    font-size: var(--font-size-lg);
  }

  .title.xl {
    font-size: var(--font-size-xl);
  }

  .nav-wrapper {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0 1em;
    gap: 1em;
  }

  .link-wrapper {
    display: flex;
    cursor: pointer;
    text-align: center;
  }

  .icon-wrapper {
    display: flex;
    flex-direction: column;
    width: 40px;
    height: 40px;
    justify-content: center;
  }

  .icon-wrapper span {
    background-color: var(--color-astro-violet);
    border-radius: 10px;
    height: 3px;
    margin: 3px 0;
    transition: .4s cubic-bezier(0.68, -0.6, 0.32, 1.6);
  }

  .icon-wrapper span:nth-of-type(1) {
    width: 50%;
  }

  .icon-wrapper span:nth-of-type(2) {
    width: 100%;
  }

  .icon-wrapper span:nth-of-type(3) {
    width: 75%;
  }

  .text-gradient {
    margin: .5em 0;
    font-weight: 900;
    background-image: var(--gradient-astro);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100% 200%;
    background-position-y: 100%;
    animation: pulse 4s ease-in-out infinite;
    flex-grow: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  @keyframes pulse {

    0%,
    100% {
      background-position-y: 0%;
    }

    50% {
      background-position-y: 80%;
    }
  }
</style>